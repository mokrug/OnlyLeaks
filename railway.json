{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "env": {
    "PORT": {
      "description": "The port that the application will listen on",
      "required": true,
      "default": 3000
    }
  },
  "deploy": {
    "builder": "HEROKU",
    "options": {
      "buildpacks": [
        "heroku/nodejs"
      ],
      "memory": "512MB"
    },
    "env": {
      "NODE_ENV": "production"
    },
    "startCommand": "npm start"
  }
}
